{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",         // Имя твоего файла с Flask-приложением
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true
    }
  ]
}
